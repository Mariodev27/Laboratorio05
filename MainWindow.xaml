<Window x:Class="Laboratorio05.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laboratorio05"
        mc:Ignorable="d"
        Title="Lab CRUD" Height="820" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <Button Content="CREATE" Click="Create_Click" Margin="5" Background="LightGreen" Width="200" Height="50" FontSize="20"/>
            <Button Content="READ" Click="Read_Click" Margin="5" Background="LightBlue" Width="200" Height="50" FontSize="20"/>
            <Button Content="UPDATE" Click="Update_Click" Margin="5" Background="LightYellow" Width="200" Height="50" FontSize="20"/>
            <Button Content="DELETE" Click="Delete_Click" Margin="5" Background="LightCoral" Width="200" Height="50" FontSize="20"/>
        </StackPanel>
    </Grid>
</Window>
